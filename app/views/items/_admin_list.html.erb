<%= link_to 'New Item', new_item_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Normal Price</th>
      <th>Heroic Price</th>
      <th><th>
      <th><th>
      <th><th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="<%= item.quality.downcase %>">
          <%= link_to item.name, item, {
            :class => item.quality.downcase
          } %>
        </td>
        <td><%= item.price_normal %></td>
        <td><%= item.price_heroic %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

